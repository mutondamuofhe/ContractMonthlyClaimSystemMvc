@{
    ViewData["Title"] = "Dashboard";
}

<div style="text-align:center;max-width:900px;margin:0 auto">
    <h1 style="font-size:28px;color:#ad1457;margin-bottom:8px">Welcome to the Monthly Claim System</h1>
    <p style="color:#555;line-height:1.5">
        This system helps lecturers submit monthly claims with supporting documents and track them after submission.
        Structured forms, mandatory uploads, and input validation ensure accuracy, consistency, and reliability.
    </p>
    <p style="color:#555;line-height:1.5">
        Submitted claims are first reviewed by the <b>Program Coordinator</b> for pre-approval, then finalized by the
        <b>Program Manager</b> who approves or rejects them. All users register and log in according to their roles.
    </p>

    <!-- Role Cards -->
    <div style="display:flex;gap:20px;justify-content:center;margin-top:30px;flex-wrap:wrap">
        <div style="flex:1;min-width:250px;background:#fff;border-radius:10px;padding:20px;box-shadow:0 2px 6px rgba(0,0,0,0.1)">
            <h3 style="color:#ad1457">Lecturers</h3>
            <p>Submit claims with accurate documentation and complete all required fields.</p>
            <a asp-controller="Claims" asp-action="Create" class="primary-btn"
               style="display:inline-block;padding:8px 16px;background:#ad1457;color:white;border-radius:6px;text-decoration:none;margin-right:8px">Claim</a>
            <a asp-controller="Claims" asp-action="Track" class="primary-btn"
               style="display:inline-block;padding:8px 16px;background:#ad1457;color:white;border-radius:6px;text-decoration:none">Track Claim</a>
        </div>

        <div style="flex:1;min-width:250px;background:#fff;border-radius:10px;padding:20px;box-shadow:0 2px 6px rgba(0,0,0,0.1)">
            <h3 style="color:#ad1457">Program Coordinator</h3>
            <p>Review and pre-approve submitted claims.</p>
            <a asp-controller="Coordinator" asp-action="PreApprove" class="primary-btn"
               style="display:inline-block;padding:8px 16px;background:#ad1457;color:white;border-radius:6px;text-decoration:none">Pre-Approve</a>
        </div>

        <div style="flex:1;min-width:250px;background:#fff;border-radius:10px;padding:20px;box-shadow:0 2px 6px rgba(0,0,0,0.1)">
            <h3 style="color:#ad1457">Program Manager</h3>
            <p>Finalize claims by approving or rejecting them.</p>
            <a asp-controller="Manager" asp-action="Approve" class="primary-btn"
               style="display:inline-block;padding:8px 16px;background:#ad1457;color:white;border-radius:6px;text-decoration:none">Approve</a>
        </div>
    </div>
</div>
